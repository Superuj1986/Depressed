@model Depressed.Models.Lophoc
@{
    ViewBag.Title = "Thêm lớp học mới";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var te = ViewBag.Teacher as List<Depressed.Models.Teacher>;
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Add_Lophoc", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <h3>Giáo viên đứng lớp</h3>
        <div class="col-md-10">
            @Html.DropDownListFor(
           x => x.te_id,
           new SelectList(
               te,
               nameof(Depressed.Models.Teacher.te_id),
               nameof(Depressed.Models.Teacher.name)
               ),
           new { @class = "form-control" })
        </div>
    </div>
    @*<div class="form-group">
            @Html.LabelFor(m => m.name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            </div>
        </div>*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Add" />
        </div>
    </div>
}

